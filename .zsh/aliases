# Unix
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias -g G='| grep'
alias -g M='| less'
alias -g ONE="| awk '{ print \$1}'"
alias e="$EDITOR"
alias v="$VISUAL"
# because typing is hard
alias ls='ls -G'
alias grep='grep --color'

# Vim
alias :w="echo this isn\'t vim ðŸŒŸ"
alias :q='exit'

# Config Files
alias vimrc="nvim ~/.vimrc"
alias zshrc="nvim ~/.zshrc"

# Aliases for gcc
alias gcc='gcc-8'
alias cc='gcc-8'
alias g++='g++-8'
alias c++='g++-8'
